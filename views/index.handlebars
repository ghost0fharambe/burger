<h1>Burgers!</h1>

<h2>Uneaten Burgers</h2>

<ul>
    {{#each burgers}}
        {{#unless devoured}}
            <li>
                <p>Burger: {{this.burger_name}}</p>
                <button class="eat-btn" data-value={{this.id}}>Eat!</button>
            </li>
        {{/unless}}
    {{/each}}
</ul>

<h2>Eaten Burgers</h2>

<ul>
    {{#each burgers}}
        {{#if devoured}}
            <li>
                <p>Burger: {{this.burger_name}}</p>
            </li>
        {{/if}}
    {{/each}}
</ul>

<h2>Add a Burger</h2>

<form class="create-form">

    <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="burgerName" name="burger_name">
    </div>

    <button type="submit" id="burger">Add Burger</button>
</form>